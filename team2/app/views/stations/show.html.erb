<div class="block">
  <div class="secondary-navigation">
    <ul class="wat-cf">
      <li class="first"><%= link_to "#{t("web-app-theme.list", :default => "List")}", stations_path  %></li>
      <li><%= link_to "#{t("web-app-theme.new", :default => "New")}", new_station_path %></li>
      <li class="active"><%= link_to "#{t("web-app-theme.show", :default => "Show")}", station_path %></li>
    </ul>
  </div>          
  <div class="content">
    <div class="inner">
      
        <p>
          <b><%= t("activerecord.attributes.station.color", :default => t("activerecord.labels.color", :default => "Color")) %>:</b>
          <%= @station.color %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.station.lat", :default => t("activerecord.labels.lat", :default => "Lat")) %>:</b>
          <%= @station.lat %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.station.lng", :default => t("activerecord.labels.lng", :default => "Lng")) %>:</b>
          <%= @station.lng %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.station.name", :default => t("activerecord.labels.name", :default => "Name")) %>:</b>
          <%= @station.name %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.station.connected_id", :default => t("activerecord.labels.connected_id", :default => "Connected")) %>:</b>
          <%= @station.connected_id %>
        </p>

        <p>
          <b><%= t("activerecord.attributes.station.external_id", :default => t("activerecord.labels.external_id", :default => "External")) %>:</b>
          <%= @station.external_id %>
        </p>
      <div class="wat-cf">
        <%= link_to "#{image_tag("web-app-theme/application_edit.png", :alt => "#{t("web-app-theme.edit", :default=> "Edit")}")} #{t("web-app-theme.edit", :default=> "Edit")}", edit_station_path(@station), :class => "button" %> 
        <%= link_to "#{image_tag("web-app-theme/cross.png", :alt => "#{t("web-app-theme.delete", :default=> "Delete")}")} #{t("web-app-theme.delete", :default => "Delete")}", station_path(@station), :method => "delete", :class => "button", :confirm => "#{t("web-app-theme.confirm", :default => "Are you sure?")}" %>
      </div>      
    </div>
  </div>
</div>

<% content_for :sidebar, render(:partial => 'sidebar') -%>